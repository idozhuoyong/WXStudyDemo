.title {
  margin: 20rpx 0;
  color: #ccc;
}
.scroll-view-row {
  display: flex;
  flex-direction: row;
  height: 400rpx;
  background: #e4e4e4;
}
.scroll-view-column {
  display: flex;
  flex-direction: column;
  height: 400rpx;
  background: #e4e4e4;
}
.box {
  width: 750rpx;
  height: 400rpx;
  border: 1px solid #eee;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}