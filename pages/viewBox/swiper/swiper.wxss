.swiper {
    width: 750rpx;
    height: 400rpx;
}
.swiper-item {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
}
.swiper-item-text-1 {
    background-color: #efefef;
}
.swiper-item-text-2 {
    background-color: #f4f4f4;
}
.swiper-item-text-3 {
    background-color: #adadad;
}

.page-section {
    width: 100%;
}
.weui-cells {

}
.weui-cell {
    display: flex;
    flex-direction: row;
    padding: 10rpx 15rpx;
    border: 1px solid #f4f4f4;
    border-left-width: 0;
    border-right-width: 0;
    margin: 0 15rpx;
}
.weui-cell-left {
    flex: 1;
}